<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="comercializadoraPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <!-- Entidades JPA -->
        <class>ec.edu.monster.model.Usuario</class>
        <class>ec.edu.monster.model.Electrodomestico</class>
        <class>ec.edu.monster.model.Factura</class>
        <class>ec.edu.monster.model.DetalleFactura</class>
        
        

        <properties>
            <!-- Datos de conexi칩n -->
            <property name="jakarta.persistence.jdbc.url" 
                      value="jdbc:mysql://localhost:3306/comercializadora?useSSL=false&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="MONSTER"/>
            <property name="jakarta.persistence.jdbc.password" value="MONSTER9"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <!-- Crear tablas autom치ticamente -->
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
            
            <!-- Forzar la creaci칩n de tablas en cada despliegue (SOLO PARA DESARROLLO) -->
            <!-- IMPORTANTE: Cambiar a 'create-or-extend-tables' en producci칩n -->
            <property name="eclipselink.deploy-on-startup" value="true"/>
            
            <!-- Opcional: log de SQL -->
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <property name="eclipselink.logging.parameters" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
