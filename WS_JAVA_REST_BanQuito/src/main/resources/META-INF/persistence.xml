<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="banquitoPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <!-- Entidades JPA -->
        <class>ec.edu.monster.model.Usuario</class>
        <class>ec.edu.monster.model.Cliente</class>
        <class>ec.edu.monster.model.Cuenta</class>
        <class>ec.edu.monster.model.Movimiento</class>
        <class>ec.edu.monster.model.Credito</class>
        <class>ec.edu.monster.model.CuotaAmortizacion</class>

        <properties>
            <!-- Datos de conexión -->
            <property name="jakarta.persistence.jdbc.url" 
                      value="jdbc:mysql://localhost:3306/banquito?useSSL=false&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="MONSTER"/>
            <property name="jakarta.persistence.jdbc.password" value="MONSTER9"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <!-- Crear / extender tablas automáticamente -->
            <property name="jakarta.persistence.schema-generation.database.action" 
                      value="create-or-extend-tables"/>

            <!-- Opcional: log de SQL -->
            <property name="eclipselink.logging.level" value="FINE"/>
        </properties>
    </persistence-unit>
</persistence>
