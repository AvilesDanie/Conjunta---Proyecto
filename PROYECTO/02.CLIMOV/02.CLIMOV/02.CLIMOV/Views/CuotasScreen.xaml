<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_02.CLIMOV.Views.CuotasScreen"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource FondoClaro}">

    <Grid RowDefinitions="Auto,*">
        <Grid Grid.Row="0" BackgroundColor="{StaticResource CyanOscuro}" Padding="16" ColumnDefinitions="Auto,*">
            <Label Grid.Column="0" Text="â¬…ï¸" FontSize="24" TextColor="White" VerticalOptions="Center" Margin="0,0,10,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackClicked"/>
                </Label.GestureRecognizers>
            </Label>
            <Label Grid.Column="1" Text="Cuotas del CrÃ©dito" TextColor="{StaticResource TextoBlanco}" FontSize="20" FontAttributes="Bold" VerticalOptions="Center" Margin="10,0,0,0"/>
        </Grid>

        <CollectionView Grid.Row="1" x:Name="CollectionCuotas" Margin="16">
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="16">
                    <Label Text="ðŸ“‹" FontSize="80" HorizontalOptions="Center" Opacity="0.7"/>
                    <Label Text="No hay cuotas registradas" FontSize="16" TextColor="{StaticResource TextoGrisMedio}" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,0,0,12" Padding="16" CornerRadius="12" HasShadow="True" BackgroundColor="{StaticResource BlancoPuro}">
                        <Grid RowSpacing="12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="1"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto">
                                <Frame Grid.Column="0" WidthRequest="40" HeightRequest="40" CornerRadius="20" Padding="0" BackgroundColor="{StaticResource CyanOscuro}" HasShadow="False">
                                    <Label Text="{Binding NumeroCuota}" FontSize="16" FontAttributes="Bold" TextColor="{StaticResource TextoBlanco}" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Frame>
                                <VerticalStackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center">
                                    <Label Text="{Binding FechaVencimiento, StringFormat='Vence: {0}'}" FontSize="14" TextColor="{StaticResource TextoPrincipal}"/>
                                    <Label Text="{Binding Estado}" FontSize="12" TextColor="{StaticResource TextoGrisMedio}"/>
                                </VerticalStackLayout>
                                <Label Grid.Column="2" Text="{Binding Monto, StringFormat='$ {0:N2}'}" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource CyanOscuro}" VerticalOptions="Center"/>
                            </Grid>

                            <BoxView Grid.Row="1" HeightRequest="1" BackgroundColor="{StaticResource GrisBordes}"/>

                            <Grid Grid.Row="2" ColumnDefinitions="*,Auto" x:Name="GridBotones">
                                <Button Grid.Column="0" x:Name="BtnPagar" Text="Pagar" BackgroundColor="{StaticResource VerdeExito}" TextColor="{StaticResource TextoBlanco}" FontSize="12" Padding="12,6" CornerRadius="8" Margin="0,0,8,0" Clicked="OnPagarClicked" CommandParameter="{Binding IdCuota}" IsVisible="{Binding Estado, Converter={StaticResource EstadoCuotaToBoolConverter}, ConverterParameter=PENDIENTE}"/>
                                <Button Grid.Column="1" x:Name="BtnCancelar" Text="Cancelar" BackgroundColor="{StaticResource RojoError}" TextColor="{StaticResource TextoBlanco}" FontSize="12" Padding="12,6" CornerRadius="8" Clicked="OnCancelarClicked" CommandParameter="{Binding IdCuota}" IsVisible="{Binding Estado, Converter={StaticResource EstadoCuotaToBoolConverter}, ConverterParameter=PENDIENTE}"/>
                                <Label Grid.Column="0" Grid.ColumnSpan="2" Text="âœ… PAGADA" FontSize="16" FontAttributes="Bold" TextColor="{StaticResource VerdeExito}" HorizontalOptions="Center" IsVisible="{Binding Estado, Converter={StaticResource EstadoCuotaToBoolConverter}, ConverterParameter=PAGADA}"/>
                                <Label Grid.Column="0" Grid.ColumnSpan="2" Text="âŒ CANCELADA" FontSize="16" FontAttributes="Bold" TextColor="{StaticResource RojoError}" HorizontalOptions="Center" IsVisible="{Binding Estado, Converter={StaticResource EstadoCuotaToBoolConverter}, ConverterParameter=CANCELADA}"/>
                            </Grid>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator Grid.Row="1" x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" Color="{StaticResource CyanOscuro}" WidthRequest="48" HeightRequest="48" HorizontalOptions="Center" VerticalOptions="Center"/>
    </Grid>
</ContentPage>
