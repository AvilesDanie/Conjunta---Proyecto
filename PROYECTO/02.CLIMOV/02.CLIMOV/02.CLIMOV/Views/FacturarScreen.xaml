<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:_02.CLIMOV.ViewModels"
             x:Class="_02.CLIMOV.Views.FacturarScreen"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource FondoClaro}">

    <ContentPage.BindingContext>
        <viewmodels:FacturaViewModel/>
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*">
        <Grid Grid.Row="0" BackgroundColor="{StaticResource Cyan}" Padding="16" ColumnDefinitions="Auto,*">
            <Label Grid.Column="0" Text="â¬…ï¸" FontSize="24" TextColor="White" VerticalOptions="Center" Margin="0,0,10,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackClicked"/>
                </Label.GestureRecognizers>
            </Label>
            <Label Grid.Column="1" Text="Nueva Factura" TextColor="{StaticResource TextoBlanco}" FontSize="20" FontAttributes="Bold" VerticalOptions="Center" Margin="10,0,0,0"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="16" Spacing="16">
                <Frame Padding="20" CornerRadius="16" HasShadow="True" BackgroundColor="{StaticResource BlancoPuro}">
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Datos del Cliente" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource TextoPrincipal}"/>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="CÃ©dula del Cliente *" TextColor="{StaticResource TextoPrincipal}" FontSize="14" FontAttributes="Bold"/>
                            <Frame CornerRadius="12" Padding="0" HasShadow="False" BorderColor="{StaticResource GrisBordes}">
                                <Entry x:Name="EntryCedula" Placeholder="Ingrese la cÃ©dula" PlaceholderColor="{StaticResource TextoGrisMedio}" TextColor="{StaticResource TextoPrincipal}" Keyboard="Numeric" Margin="12,8"/>
                            </Frame>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Nombre del Cliente *" TextColor="{StaticResource TextoPrincipal}" FontSize="14" FontAttributes="Bold"/>
                            <Frame CornerRadius="12" Padding="0" HasShadow="False" BorderColor="{StaticResource GrisBordes}">
                                <Entry x:Name="EntryNombreCliente" Placeholder="Ingrese el nombre" PlaceholderColor="{StaticResource TextoGrisMedio}" TextColor="{StaticResource TextoPrincipal}" Margin="12,8"/>
                            </Frame>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <Frame Padding="20" CornerRadius="16" HasShadow="True" BackgroundColor="{StaticResource BlancoPuro}">
                    <VerticalStackLayout Spacing="20">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0" Text="Productos" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource TextoPrincipal}" VerticalOptions="Center"/>
                            <Button Grid.Column="1" Text="+ Agregar" BackgroundColor="{StaticResource VerdeExito}" TextColor="{StaticResource TextoBlanco}" CornerRadius="8" Padding="12,6" Clicked="OnAgregarProductoClicked"/>
                        </Grid>

                        <CollectionView x:Name="CollectionProductos">
                            <CollectionView.EmptyView>
                                <Label Text="No hay productos agregados" TextColor="{StaticResource TextoGrisMedio}" HorizontalOptions="Center" Margin="0,20"/>
                            </CollectionView.EmptyView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Margin="0,0,0,8" Padding="12" CornerRadius="8" HasShadow="False" BorderColor="{StaticResource GrisBordes}">
                                        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="12">
                                            <VerticalStackLayout Grid.Column="0">
                                                <Label Text="{Binding NombreElectrodomestico}" FontSize="14" FontAttributes="Bold" TextColor="{StaticResource TextoPrincipal}"/>
                                                <Label Text="{Binding Cantidad, StringFormat='Cantidad: {0}'}" FontSize="12" TextColor="{StaticResource TextoGrisMedio}"/>
                                            </VerticalStackLayout>
                                            <Label Grid.Column="1" Text="{Binding PrecioUnitario, StringFormat='$ {0:N2}'}" FontSize="14" FontAttributes="Bold" TextColor="{StaticResource VerdeExito}" VerticalOptions="Center"/>
                                            <Button Grid.Column="2" Text="ðŸ—‘ï¸" BackgroundColor="Transparent" TextColor="{StaticResource RojoError}" WidthRequest="30" Padding="0" Clicked="OnEliminarProductoClicked" CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <BoxView HeightRequest="1" BackgroundColor="{StaticResource GrisBordes}"/>

                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0" Text="TOTAL:" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource TextoPrincipal}"/>
                            <Label Grid.Column="1" x:Name="LabelTotal" Text="$ 0.00" FontSize="24" FontAttributes="Bold" TextColor="{StaticResource VerdeExito}"/>
                        </Grid>

                        <Button x:Name="BtnFacturar" Text="Generar Factura" BackgroundColor="{StaticResource CyanOscuro}" TextColor="{StaticResource TextoBlanco}" FontAttributes="Bold" CornerRadius="12" HeightRequest="56" Clicked="OnFacturarClicked"/>

                        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" Color="{StaticResource CyanOscuro}" WidthRequest="24" HeightRequest="24" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
