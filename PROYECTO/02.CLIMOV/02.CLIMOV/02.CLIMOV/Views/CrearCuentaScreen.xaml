<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_02.CLIMOV.Views.CrearCuentaScreen"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource FondoClaro}">

    <Grid RowDefinitions="Auto,*">
        <Grid Grid.Row="0" BackgroundColor="{StaticResource VerdeExito}" Padding="16" ColumnDefinitions="Auto,*">
            <Label Grid.Column="0" Text="⬅️" FontSize="24" TextColor="White" VerticalOptions="Center" Margin="0,0,10,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackClicked"/>
                </Label.GestureRecognizers>
            </Label>
            <Label Grid.Column="1" Text="Nueva Cuenta" TextColor="{StaticResource TextoBlanco}" FontSize="20" FontAttributes="Bold" VerticalOptions="Center" Margin="10,0,0,0"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="16" Spacing="16">
                <Frame Padding="20" CornerRadius="16" HasShadow="True" BackgroundColor="{StaticResource BlancoPuro}">
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Datos de la Nueva Cuenta" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource TextoPrincipal}"/>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Cédula del Cliente *" TextColor="{StaticResource TextoPrincipal}" FontSize="14" FontAttributes="Bold"/>
                            <Frame CornerRadius="12" Padding="0" HasShadow="False" BorderColor="{StaticResource GrisBordes}">
                                <Entry x:Name="EntryCedula" Placeholder="Ingrese la cédula" PlaceholderColor="{StaticResource TextoGrisMedio}" TextColor="{StaticResource TextoPrincipal}" Keyboard="Numeric" Margin="12,8"/>
                            </Frame>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Tipo de Cuenta *" TextColor="{StaticResource TextoPrincipal}" FontSize="14" FontAttributes="Bold"/>
                            <Frame CornerRadius="12" Padding="0" HasShadow="False" BorderColor="{StaticResource GrisBordes}">
                                <Picker x:Name="PickerTipoCuenta" TextColor="{StaticResource TextoPrincipal}" Margin="12,8">
                                    <Picker.Items>
                                        <x:String>AHORROS</x:String>
                                        <x:String>CORRIENTE</x:String>
                                    </Picker.Items>
                                </Picker>
                            </Frame>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Saldo Inicial" TextColor="{StaticResource TextoPrincipal}" FontSize="14" FontAttributes="Bold"/>
                            <Frame CornerRadius="12" Padding="0" HasShadow="False" BorderColor="{StaticResource GrisBordes}">
                                <Entry x:Name="EntrySaldoInicial" Placeholder="0.00" PlaceholderColor="{StaticResource TextoGrisMedio}" TextColor="{StaticResource TextoPrincipal}" Keyboard="Numeric" Margin="12,8"/>
                            </Frame>
                            <Label Text="Si no ingresa un saldo, se creará con $0.00" FontSize="12" TextColor="{StaticResource TextoGrisMedio}" Margin="4,0,0,0"/>
                        </VerticalStackLayout>

                        <Button x:Name="BtnCrear" Text="Crear Cuenta" BackgroundColor="{StaticResource VerdeExito}" TextColor="{StaticResource TextoBlanco}" FontAttributes="Bold" CornerRadius="12" HeightRequest="56" Clicked="OnCrearClicked" Margin="0,10,0,0"/>

                        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" Color="{StaticResource VerdeExito}" WidthRequest="24" HeightRequest="24" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
