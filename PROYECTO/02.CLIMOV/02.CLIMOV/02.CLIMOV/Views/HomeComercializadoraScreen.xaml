<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:_02.CLIMOV.Helpers"
             x:Class="_02.CLIMOV.Views.HomeComercializadoraScreen"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource FondoClaro}">

    <Grid RowDefinitions="Auto,*,Auto">
        <Frame Grid.Row="0" Padding="20,24" CornerRadius="0" HasShadow="True" BackgroundColor="{StaticResource NaranjaPrincipal}">
