                    </Frame.GestureRecognizers>
                    <Grid Padding="20" RowDefinitions="Auto,*,Auto">
                        <Grid.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="{StaticResource AzulPrimario}" Offset="0.0"/>
