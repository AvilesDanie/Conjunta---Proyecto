<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_02.CLIMOV.Views.EditarClienteScreen"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource FondoClaro}">

    <Grid RowDefinitions="Auto,*">
        <Grid Grid.Row="0" BackgroundColor="{StaticResource AzulPrimarioMedio}" Padding="16" ColumnDefinitions="Auto,*">
            <ImageButton Grid.Column="0" Source="arrow_back.png" BackgroundColor="Transparent" WidthRequest="40" HeightRequest="40" Clicked="OnBackClicked"/>
            <Label Grid.Column="1" Text="Editar Cliente" TextColor="{StaticResource TextoBlanco}" FontSize="20" FontAttributes="Bold" VerticalOptions="Center" Margin="10,0,0,0"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="16" Spacing="16">
                <Frame Padding="20" CornerRadius="16" HasShadow="True" BackgroundColor="{StaticResource BlancoPuro}">
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Editar Datos del Cliente" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource TextoPrincipal}"/>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="CÃ©dula" TextColor="{StaticResource TextoPrincipal}" FontSize="14" FontAttributes="Bold"/>
                            <Frame CornerRadius="12" Padding="0" HasShadow="False" BorderColor="{StaticResource GrisBordes}" BackgroundColor="{StaticResource FondoDisabled}">
                                <Entry x:Name="EntryCedula" IsReadOnly="True" TextColor="{StaticResource TextoGrisMedio}" Margin="12,8"/>
                            </Frame>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Nombre Completo *" TextColor="{StaticResource TextoPrincipal}" FontSize="14" FontAttributes="Bold"/>
                            <Frame CornerRadius="12" Padding="0" HasShadow="False" BorderColor="{StaticResource GrisBordes}">
                                <Entry x:Name="EntryNombre" Placeholder="Ingrese el nombre completo" PlaceholderColor="{StaticResource TextoGrisMedio}" TextColor="{StaticResource TextoPrincipal}" Margin="12,8"/>
                            </Frame>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Estado Civil *" TextColor="{StaticResource TextoPrincipal}" FontSize="14" FontAttributes="Bold"/>
                            <Frame CornerRadius="12" Padding="0" HasShadow="False" BorderColor="{StaticResource GrisBordes}">
                                <Picker x:Name="PickerEstadoCivil" TextColor="{StaticResource TextoPrincipal}" Margin="12,8">
                                    <Picker.Items>
                                        <x:String>SOLTERO</x:String>
                                        <x:String>CASADO</x:String>
                                        <x:String>DIVORCIADO</x:String>
                                        <x:String>VIUDO</x:String>
                                    </Picker.Items>
                                </Picker>
                            </Frame>
                        </VerticalStackLayout>

                        <Button x:Name="BtnActualizar" Text="Actualizar Cliente" BackgroundColor="{StaticResource AzulPrimarioMedio}" TextColor="{StaticResource TextoBlanco}" FontAttributes="Bold" CornerRadius="12" HeightRequest="56" Clicked="OnActualizarClicked" Margin="0,10,0,0"/>

                        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" Color="{StaticResource AzulPrimarioMedio}" WidthRequest="24" HeightRequest="24" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
