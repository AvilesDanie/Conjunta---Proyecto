<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:_02.CLIMOV.ViewModels"
             x:Class="_02.CLIMOV.Views.CuentasPorClienteScreen"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource FondoClaro}">

    <ContentPage.BindingContext>
        <viewmodels:CuentaViewModel/>
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*">
        <Grid Grid.Row="0" BackgroundColor="{StaticResource VerdeExito}" Padding="16" ColumnDefinitions="Auto,*">
            <ImageButton Grid.Column="0" Source="arrow_back.png" BackgroundColor="Transparent" WidthRequest="40" HeightRequest="40" Clicked="OnBackClicked"/>
            <Label Grid.Column="1" Text="Cuentas del Cliente" TextColor="{StaticResource TextoBlanco}" FontSize="20" FontAttributes="Bold" VerticalOptions="Center" Margin="10,0,0,0"/>
        </Grid>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Cuentas}" Margin="16">
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="16">
                    <Label Text="ðŸ¦" FontSize="80" HorizontalOptions="Center" Opacity="0.7"/>
                    <Label Text="No hay cuentas registradas" FontSize="16" TextColor="{StaticResource TextoGrisMedio}" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,0,0,12" Padding="0" CornerRadius="16" HasShadow="True">
                        <Grid Padding="20">
                            <Grid.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource VerdeExito}" Offset="0.0"/>
                                    <GradientStop Color="{StaticResource VerdeBrillanteSaldo}" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Grid.Background>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="1"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" ColumnDefinitions="Auto,*">
                                <Label Grid.Column="0" Text="ðŸ’³" FontSize="32"/>
                                <VerticalStackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center">
                                    <Label Text="{Binding NumeroCuenta, StringFormat='Cuenta NÂº {0}'}" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource TextoBlanco}"/>
                                    <Label Text="{Binding TipoCuenta}" FontSize="14" TextColor="{StaticResource TextoBlanco}" Opacity="0.9"/>
                                </VerticalStackLayout>
                            </Grid>

                            <Label Grid.Row="1" Text="{Binding Saldo, StringFormat='$ {0:N2}'}" FontSize="32" FontAttributes="Bold" TextColor="{StaticResource TextoBlanco}" HorizontalOptions="End" Margin="0,8,0,12"/>

                            <BoxView Grid.Row="2" HeightRequest="1" BackgroundColor="#33FFFFFF"/>

                            <Grid Grid.Row="3" ColumnDefinitions="*,Auto" Margin="0,12,0,0">
                                <Label Grid.Column="0" Text="{Binding FechaCreacion, StringFormat='Creado: {0}'}" FontSize="12" TextColor="{StaticResource TextoBlanco}" Opacity="0.8" VerticalOptions="Center"/>
                                <Button Grid.Column="1" Text="Ver Movimientos" BackgroundColor="{StaticResource BlancoPuro}" TextColor="{StaticResource VerdeExito}" FontSize="12" Padding="12,6" CornerRadius="8" Clicked="OnVerMovimientosClicked" CommandParameter="{Binding NumeroCuenta}"/>
                            </Grid>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator Grid.Row="1" IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" Color="{StaticResource VerdeExito}" WidthRequest="48" HeightRequest="48" HorizontalOptions="Center" VerticalOptions="Center"/>
    </Grid>
</ContentPage>
