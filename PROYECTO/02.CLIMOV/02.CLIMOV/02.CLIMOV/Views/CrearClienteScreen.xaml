<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_02.CLIMOV.Views.CrearClienteScreen"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource FondoClaro}">

    <Grid RowDefinitions="Auto,*">
        
        <!-- TopBar -->
        <Grid Grid.Row="0" BackgroundColor="{StaticResource VerdeExito}" Padding="16" ColumnDefinitions="Auto,*">
            <Label Grid.Column="0" Text="⬅️" FontSize="24" TextColor="White" VerticalOptions="Center" Margin="0,0,10,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackClicked"/>
                </Label.GestureRecognizers>
            </Label>
            <Label Grid.Column="1" Text="Nuevo Cliente" TextColor="{StaticResource TextoBlanco}" FontSize="20" FontAttributes="Bold" VerticalOptions="Center" Margin="10,0,0,0"/>
        </Grid>

        <!-- Formulario -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="16" Spacing="16">
                
                <Frame Padding="20" CornerRadius="16" HasShadow="True" BackgroundColor="{StaticResource BlancoPuro}">
                    <VerticalStackLayout Spacing="20">
                        
                        <Label Text="Datos del Cliente" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource TextoPrincipal}"/>

                        <!-- Cédula -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Cédula *" TextColor="{StaticResource TextoPrincipal}" FontSize="14" FontAttributes="Bold"/>
                            <Frame CornerRadius="12" Padding="0" HasShadow="False" BorderColor="{StaticResource GrisBordes}">
                                <Entry x:Name="EntryCedula" Placeholder="Ingrese la cédula" PlaceholderColor="{StaticResource TextoGrisMedio}" TextColor="{StaticResource TextoPrincipal}" Keyboard="Numeric" Margin="12,8"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Nombre -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Nombre Completo *" TextColor="{StaticResource TextoPrincipal}" FontSize="14" FontAttributes="Bold"/>
                            <Frame CornerRadius="12" Padding="0" HasShadow="False" BorderColor="{StaticResource GrisBordes}">
                                <Entry x:Name="EntryNombre" Placeholder="Ingrese el nombre completo" PlaceholderColor="{StaticResource TextoGrisMedio}" TextColor="{StaticResource TextoPrincipal}" Margin="12,8"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Fecha Nacimiento -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Fecha de Nacimiento *" TextColor="{StaticResource TextoPrincipal}" FontSize="14" FontAttributes="Bold"/>
                            <Frame CornerRadius="12" Padding="0" HasShadow="False" BorderColor="{StaticResource GrisBordes}">
                                <DatePicker x:Name="DatePickerNacimiento" TextColor="{StaticResource TextoPrincipal}" Margin="12,8"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Estado Civil -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Estado Civil *" TextColor="{StaticResource TextoPrincipal}" FontSize="14" FontAttributes="Bold"/>
                            <Frame CornerRadius="12" Padding="0" HasShadow="False" BorderColor="{StaticResource GrisBordes}">
                                <Picker x:Name="PickerEstadoCivil" TextColor="{StaticResource TextoPrincipal}" Margin="12,8">
                                    <Picker.Items>
                                        <x:String>SOLTERO</x:String>
                                        <x:String>CASADO</x:String>
                                        <x:String>DIVORCIADO</x:String>
                                        <x:String>VIUDO</x:String>
                                    </Picker.Items>
                                </Picker>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Tipo Cuenta -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Tipo de Cuenta Inicial" TextColor="{StaticResource TextoPrincipal}" FontSize="14" FontAttributes="Bold"/>
                            <Frame CornerRadius="12" Padding="0" HasShadow="False" BorderColor="{StaticResource GrisBordes}">
                                <Picker x:Name="PickerTipoCuenta" TextColor="{StaticResource TextoPrincipal}" Margin="12,8">
                                    <Picker.Items>
                                        <x:String>AHORROS</x:String>
                                        <x:String>CORRIENTE</x:String>
                                    </Picker.Items>
                                </Picker>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Botón Guardar -->
                        <Button x:Name="BtnGuardar" Text="Guardar Cliente" BackgroundColor="{StaticResource VerdeExito}" TextColor="{StaticResource TextoBlanco}" FontAttributes="Bold" CornerRadius="12" HeightRequest="56" Clicked="OnGuardarClicked" Margin="0,10,0,0"/>

                        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" Color="{StaticResource VerdeExito}" WidthRequest="24" HeightRequest="24" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
