<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_02.CLIMOV.Views.CrearElectrodomesticoScreen"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource FondoClaro}">

    <Grid RowDefinitions="Auto,*">
        <Grid Grid.Row="0" BackgroundColor="{StaticResource NaranjaPrincipal}" Padding="16" ColumnDefinitions="Auto,*">
            <Label Grid.Column="0" Text="⬅️" FontSize="24" TextColor="White" VerticalOptions="Center" Margin="0,0,10,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackClicked"/>
                </Label.GestureRecognizers>
            </Label>
            <Label Grid.Column="1" Text="Nuevo Electrodoméstico" TextColor="{StaticResource TextoBlanco}" FontSize="20" FontAttributes="Bold" VerticalOptions="Center" Margin="10,0,0,0"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="16" Spacing="16">
                <Frame Padding="20" CornerRadius="16" HasShadow="True" BackgroundColor="{StaticResource BlancoPuro}">
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Datos del Electrodoméstico" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource TextoPrincipal}"/>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Nombre *" TextColor="{StaticResource TextoPrincipal}" FontSize="14" FontAttributes="Bold"/>
                            <Frame CornerRadius="12" Padding="0" HasShadow="False" BorderColor="{StaticResource GrisBordes}">
                                <Entry x:Name="EntryNombre" Placeholder="Ej: Refrigerador Samsung" PlaceholderColor="{StaticResource TextoGrisMedio}" TextColor="{StaticResource TextoPrincipal}" Margin="12,8"/>
                            </Frame>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Descripción *" TextColor="{StaticResource TextoPrincipal}" FontSize="14" FontAttributes="Bold"/>
                            <Frame CornerRadius="12" Padding="0" HasShadow="False" BorderColor="{StaticResource GrisBordes}">
                                <Editor x:Name="EditorDescripcion" Placeholder="Ingrese una descripción detallada" PlaceholderColor="{StaticResource TextoGrisMedio}" TextColor="{StaticResource TextoPrincipal}" HeightRequest="100" Margin="12,8"/>
                            </Frame>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Precio *" TextColor="{StaticResource TextoPrincipal}" FontSize="14" FontAttributes="Bold"/>
                            <Frame CornerRadius="12" Padding="0" HasShadow="False" BorderColor="{StaticResource GrisBordes}">
                                <Entry x:Name="EntryPrecio" Placeholder="0.00" PlaceholderColor="{StaticResource TextoGrisMedio}" TextColor="{StaticResource TextoPrincipal}" Keyboard="Numeric" Margin="12,8"/>
                            </Frame>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Stock *" TextColor="{StaticResource TextoPrincipal}" FontSize="14" FontAttributes="Bold"/>
                            <Frame CornerRadius="12" Padding="0" HasShadow="False" BorderColor="{StaticResource GrisBordes}">
                                <Entry x:Name="EntryStock" Placeholder="0" PlaceholderColor="{StaticResource TextoGrisMedio}" TextColor="{StaticResource TextoPrincipal}" Keyboard="Numeric" Margin="12,8"/>
                            </Frame>
                        </VerticalStackLayout>

                        <Button x:Name="BtnGuardar" Text="Guardar Electrodoméstico" BackgroundColor="{StaticResource NaranjaPrincipal}" TextColor="{StaticResource TextoBlanco}" FontAttributes="Bold" CornerRadius="12" HeightRequest="56" Clicked="OnGuardarClicked" Margin="0,10,0,0"/>

                        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" Color="{StaticResource NaranjaPrincipal}" WidthRequest="24" HeightRequest="24" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
