<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:_02.CLIMOV"
             xmlns:converters="clr-namespace:_02.CLIMOV.Converters"
             x:Class="_02.CLIMOV.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters globales -->
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
            <converters:TipoMovimientoColorConverter x:Key="TipoMovimientoColorConverter"/>
            <converters:TipoMovimientoIconConverter x:Key="TipoMovimientoIconConverter"/>
            <converters:EstadoCuotaToBoolConverter x:Key="EstadoCuotaToBoolConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
